<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    >

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_baseline_info_24"
        />

    <LinearLayout
        style="@style/parent"
        android:orientation="horizontal"
       android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/headerTextSize"


        >

        <ImageView
            android:layout_width="@dimen/headerTextSize"
            android:layout_height="@dimen/headerTextSize"
            android:src="@drawable/ic_baseline_account_box_24"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/header2TextSize"

            >

        </ImageView>
        <TextView
            style="@style/viewParent"
            android:id="@+id/dialog_username"
            android:text="@string/app_name"
            android:layout_gravity="center"

            android:textColor="@color/colorGray"
            android:textSize="@dimen/header2TextSize"
            >

        </TextView>


    </LinearLayout>

    <LinearLayout
       style="@style/parent"
        android:orientation="horizontal"

        android:layout_marginTop="@dimen/headerTextSize"
        android:gravity="center"

        >

        <ImageView
            android:layout_width="@dimen/headerTextSize"
            android:layout_height="@dimen/headerTextSize"
            android:src="@drawable/ic_baseline_mail_24"
           android:layout_gravity="center"
            android:layout_marginRight="@dimen/header2TextSize"

            >

        </ImageView>
        <TextView
            style="@style/viewParent"
            android:text="@string/app_name"
            android:layout_gravity="center"

            android:textColor="@color/colorGray"
            android:id="@+id/dialog_usermail"
            android:textSize="@dimen/header2TextSize"
            >

        </TextView>


    </LinearLayout>
    <LinearLayout
        style="@style/parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/headerTextSize"


        >

        <ImageView
            android:layout_width="@dimen/headerTextSize"
            android:layout_height="@dimen/headerTextSize"
            android:src="@drawable/ic_baseline_phone_24"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/header2TextSize"

            >

        </ImageView>
        <TextView
            style="@style/viewParent"
            android:text="@string/app_name"
            android:layout_gravity="center"

            android:textColor="@color/colorGray"
            android:id="@+id/dialog_userphone"
            android:textSize="@dimen/header2TextSize"
            >

        </TextView>


    </LinearLayout>



    <Button
        android:layout_marginTop="@dimen/headerTextSize"
       style="@style/loginButton"
        android:text="Contact Now"

        android:id="@+id/dialog_contactButton"
        />


</LinearLayout>


